{
  "expo": {
    "name": "أجري بوكس",
    "slug": "agribooks-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "locales": {
      "ar": "./src/locales/ar.json"
    },
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#4CAF50"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.agribooks.mobile",
      "infoPlist": {
        "NSFaceIDUsageDescription": "السماح لأجري بوكس باستخدام Face ID للمصادقة الآمنة.",
        "CFBundleLocalizations": ["ar", "en"],
        "CFBundleDevelopmentRegion": "ar"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#4CAF50"
      },
      "package": "com.agribooks.mobile",
      "versionCode": 1,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ],
      "supportsRTL": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "يحتاج التطبيق للوصول إلى صورك لإرفاق الإيصالات والصور بالمعاملات."
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "السماح لأجري بوكس باستخدام Face ID للمصادقة الآمنة."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "0a0fb314-6f64-493d-89bc-96669c53a22f"
      }
    },
    "owner": "nt1995"
  }
}
